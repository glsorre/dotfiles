#!/usr/bin/env python
import subprocess
import datetime
import os

def main():
    d = datetime.datetime.now()
    if d.isoweekday() == 1:
        pos = os.path.join(os.environ['DOTFILES'], "bin")
        print pos
        subprocess.call(["python", "dotfiles", "-u"], cwd = pos)

if __name__ == "__main__":
    main()
